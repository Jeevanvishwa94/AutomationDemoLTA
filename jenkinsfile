pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                 git branch: 'main', url: 'https://github.com/Jeevanvishwa94/AutomationDemoLTA.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh '''
                python3 -m venv venv
                source venv/bin/activate
                pip install -r requirements.txt
                '''
            }
        }
        stage('Run Selenium Tests') {
            steps {
                sh '''
                source venv/bin/activate
                pytest --maxfail=5 --disable-warnings
                '''
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
