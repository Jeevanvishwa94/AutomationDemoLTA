pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Jeevanvishwa94/AutomationDemoLTA.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Ensure you have a requirements.txt file in the repo
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                // Run your Python automation code
                bat 'python -m pytest tests/'
            }
        }
    }

    post {
        always {
            junit '**/test-reports/*.xml'  // Generate test reports if needed
            archiveArtifacts artifacts: '**/test-reports/*.xml', allowEmptyArchive: true
        }
    }
}
